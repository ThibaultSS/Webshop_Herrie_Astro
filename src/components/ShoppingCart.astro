---
const carts = Astro.props.carts;
let totalAmount = 0;
---
  <div class="products">
	{carts.map((cart) => (
          <div class="items">
            <div class="delete">
                <button class="delete-button" data-product-id={cart.product.id} >Delete</button>
            </div>
            <div>
            <a href={`/details/${cart.product.id}`}>
                <img src={`/images/${cart.product.images[0].image}.png`} alt="">
            </a>  
            </div>
            <div class="numbers">
                <h2>{cart.product.name}</h2>
                <p>Quantity: {cart.amount} x €{cart.product.price}</p>
                <p><strong>€{cart.product.price * cart.amount}</strong></p>   
            </div>

          </div>
		  ))}
    <div class="total">
        <h2>Total Amount: €
            {carts.forEach((cart) => {
                totalAmount += cart.product.price * cart.amount;
            })}
            {totalAmount}
        </h2>
    </div>
    <div class="checkout">
        <button id="checkout-btn">Proceed to Checkout</button>
    </div>
  </div>

<script is:client>

    const deleteButtons = document.querySelectorAll(".delete-button");
    deleteButtons.forEach((button) => {
        button.addEventListener("click", async (event) => {
            const productId = event.currentTarget.dataset.productId;
            const url = `http://127.0.0.1:8000/api/delete/order?product_id=${productId}`;
            try {
                let res = await fetch(url, { method: "GET" });
                let data = await res.json();
                if (data.status === "ok") {
                    window.location.reload();
                }
            } catch (err) {
                console.error("Error deleting from cart", err);
            }
        });
    });
    document.getElementById("checkout-btn").addEventListener("click", () => {
    window.location.href = "http://127.0.0.1:8000/order";
  });
</script>

  <style>
    .products {
      margin-top: 20px;  
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      width: 1000px;
      gap: 20px;
      margin-left: auto;
      margin-right: auto;
    }
    .items{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding-left: 5px;
        
      border: 1px solid #ccc;
    }
    .products img {
      max-width: 10%;
      height: auto;
    }
    .numbers {
      display: flex;
      flex-direction: row;
      gap: 20px;
      padding: 20px;
    }
    .delete button {
        position: relative;
        background-color: #ff0000;
        color: white;
        border: none;
        padding: 20px 10px;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 10px;
    }
    .total {
        width: 100%;
        text-align: right;
        padding-right: 15px;
        font-weight: bold;
        border-top: 2px solid #ccc;
    }
    .checkout {
        width: 100%;
        text-align: right;
        padding-right: 15px;
    }
    .checkout button {
        position: relative;
        background-color: #000000;
        color: white;
        border: none;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }
  </style>